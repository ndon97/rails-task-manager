<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
     <i class="fa fa-check-square-o">    Status of Task</i>
      <p></p>
    <% else %>
     <i class="fa fa-square-o">     Status of Task</i>
    <% end %>

<%= link_to "Delete this task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to 'back', tasks_path %>
<%= link_to 'edit', edit_task_path(@task) %>
